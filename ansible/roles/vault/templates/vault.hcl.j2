storage "raft" {
  path    = "/vault/data"
  node_id = "{{ item }}"
}

listener "tcp" {
  address         = "0.0.0.0:8200"
  cluster_address = "0.0.0.0:8201"
  tls_disable     = true
}

api_addr      = "http://127.0.0.1:{{ 8200 + item | int }}"
cluster_addr  = "http://127.0.0.1:{{ 8201 + item | int }}"
